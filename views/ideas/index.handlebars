<h1>Ideas</h1>

    {{#each ideas}}
        <div class="card card-body mb-2">
            <h4>{{title}}</h4>
            <p>{{details}}</p>
            <a href="/ideas/edit/{{id}}" class="btn btn-dark btn-block">Edit</a>
            <form method="post" action="/ideas/{{id}}?_method=DELETE">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-danger btn-block mt-2">Delete</button>
            </form>
        </div>
    {{else}}
        <p>No Video Ideas</p>
    {{/each}}
